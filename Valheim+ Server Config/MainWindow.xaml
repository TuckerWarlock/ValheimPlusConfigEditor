<Window x:Class="ValheimConfigEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValheimConfigEditor"
        mc:Ignorable="d"
        Title="Valheim Plus Configuration" Height="800" Width="600">
    <Grid>
        <Button Content="Save Configuration" Click="SaveConfiguration_Click" Margin="10" HorizontalAlignment="Center" 
                VerticalAlignment="Top" Background="Green" Foreground="White" FontWeight="Bold"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,50,0,0">
            <StackPanel x:Name="MainStackPanel">
                <!-- Dynamic UI will be generated here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
